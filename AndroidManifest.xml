<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bluebox.SmartComicsReader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="bluebox.SmartComicsReader.Activity.BookListActivity"
            android:label="@string/title_book_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bluebox.SmartComicsReader.Activity.BookDetailActivity"
            android:label="@string/title_book_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookListActivity" />
        </activity>
        <activity
            android:name="bluebox.SmartComicsReader.Activity.FullScreenActivity"
            android:label="@string/title_activity_full_screen" android:theme="@android:style/Theme.NoTitleBar.OverlayActionModes" android:hardwareAccelerated="true">
        </activity>
    </application>

</manifest>